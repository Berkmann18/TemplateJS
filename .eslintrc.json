{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:security/recommended",
    "plugin:you-dont-need-lodash-underscore/compatible",
    "plugin:node/recommended"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error"
    ],
    "no-console": "off",
    "no-extra-semi": "off",
    "prefer-const": "off",
    "quotes": [
      "error",
      "single"
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "symbol-description": [
      "warn"
    ]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}