{
  "name": "tempjs",
  "version": "0.2.0",
  "private": "true",
  "description": "Template for (Node)JS projects",
  "main": "index.js",
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "scripts": {
    "start": "node index.js",
    "test": "jest && codecov",
    "doc:lint": "documentation lint index.js",
    "doc:html": "documentation build *.js -f html -o doc/ -a public",
    "doc": "npm run doc:lint && npm run doc:html",
    "lint:js": "eslint -c ./config/.eslintrc.js src/*.js test/*.js --fix",
    "cc": "cr -c ./config/.complexrc",
    "cc:all": "npm run cc *.js src/*.js",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0",
    "version": "npm run changelog && git add CHANGELOG.md",
    "precommit": "lint-staged",
    "com": "git-cz",
    "lint:md": "remark . .github -i ./config/.remarkignore",
    "min:css": "node-sass -w scss/ -o dist/css/ --recursive --output-style compressed",
    "css": "node-sass -w scss/ -o dist/css/ --recursive",
    "lint:css": "stylelint --config ./config/.stylelintrc.json scss/",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Berkmann18/TemplateJS.git"
  },
  "keywords": [
    "Template",
    "JS",
    "NodeJS",
    "GitHub"
  ],
  "author": "Maximilian Berkmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Berkmann18/TemplateJS/issues"
  },
  "homepage": "https://github.com/Berkmann18/TemplateJS#readme",
  "devDependencies": {
    "codecov": "^3.0.4",
    "complexity-report": "^2.0.0-alpha",
    "cz-adapter-eslint": "^0.1.2",
    "documentation": "^8.1.2",
    "eslint": "^5.2.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^1.1.3",
    "jest": "^23.4.1",
    "jest-cli": "^23.4.1",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.2",
    "remark-cli": "^6.0.0",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "sass-loader": "^7.0.1",
    "stylelint": "^9.7.1",
    "stylelint-config-standard": "^18.2.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 9"
  ],
  "lint-staged": {
    "*.js": [
      "eslint -c ./config/.eslintrc.js --fix",
      "git add"
    ],
    "*.md": [
      "remark",
      "git add"
    ],
    "*.scss": [
      "stylelint --config ./config/.stylelintrc.json",
      "git add"
    ]
  },
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-adapter-eslint"
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      "remark-preset-lint-consistent"
    ]
  }
}
